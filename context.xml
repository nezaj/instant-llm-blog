async function handlePush(bag, opts) {
  const pkgAndAuthInfo = await resolvePackageAndAuthInfoWithErrorLogging();
  if (!pkgAndAuthInfo) return;
  const { ok, appId } = await detectOrCreateAppAndWriteToEnv(
    pkgAndAuthInfo,
    opts,
  );
